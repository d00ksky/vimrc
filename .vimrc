" Autocompletion and auto-indent
set completeopt=menuone,longest,preview
set tabstop=4
set shiftwidth=4
set expandtab


" Syntax highlighting
syntax on
set background=dark
highlight Normal ctermbg=none

" Key mappings and shortcuts

" Settings
set mouse=a
set nowrap
set hlsearch
set incsearch
set noswapfile
set nobackup
set nowritebackup
set autowrite
set autoread
set number
set smartcase
set ignorecase
set laststatus=2
set showcmd
set colorcolumn=0
set relativenumber
set tabstop=4
set autoindent

